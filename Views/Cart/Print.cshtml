@using ShallvaMVC.Utils;

@{
    Layout = null;
}

@model Cart

<!DOCTYPE html>

<html lang="he" xml:lang="he" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>הזמנה מספר - @Model.OrderId</title>

    <style type="text/css">
        *, *:before, *:after {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        body {
            direction: rtl;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 14px;
            line-height: 1.428571429;
            color: #333333;
            background-color: #ffffff;
            margin: 0;
        }

        body, #top-header {
            width: 1024px;
            margin: 0 auto;
        }

        #top-header {
            background-color: #FFF;
            border: 0;
            font-size: 17px;
            padding-top: 10px;
            height: 130px;
        }

        .navbar-inverse {
            background-color: #222222;
            border-color: #080808;
        }

        .navbar-fixed-top {
            top: 0;
            z-index: 1030;
        }

        .navbar-fixed-top, .navbar-fixed-bottom {
            position: fixed;
            right: 0;
            left: 0;
            border-width: 0 0 1px;
        }

        .navbar {
            position: relative;
            z-index: 1000;
            min-height: 50px;
            margin-bottom: 20px;
            border: 1px solid transparent;
        }

        .container {
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

            .container:before, .container:after {
                display: table;
                content: " ";
            }

        #basad {
            position: fixed;
            font-weight: bold;
            font-size: 13px;
        }

        .tar {
            text-align: right !important;
        }

        .row {
            margin-right: -15px;
            margin-left: -15px;
        }

            .row:before, .row:after {
                display: table;
                content: " ";
            }

            .row:after {
                clear: both;
            }

        #qshd {
            padding-left: 0;
        }

        .col-md-4 {
            width: 33.33333333333333%;
            float: left;
        }

        #top-header #logo {
            background: url('http://shallva.co.il/images/logo.png') no-repeat center center;
            height: 100px;
        }

        #cart-table {
            width: 100%;
        }

        h2 {
          
            font-size: 30px;
        }

        #cart .modal-dialog {
            width: 400px;
        }

        #cart .modal-header {
            border: 0;
        }

            #cart .modal-header .close {
                font-size: 24px;
            }

        #cart p {
            text-align: center;
            font-size: 20px;
        }

        #cart .modal-body div.row > div {
            text-align: center;
        }

            #cart .modal-body div.row > div button {
                background-color: #F26B44;
                border: 0;
            }

        #cart-table {
            width: 100%;
        }

            #cart-table thead {
                background-color: #E6E6E6;
            }

                #cart-table thead th {
                    color: rgba(0, 0, 0, 87);
                }

                #cart-table thead th, #cart-table tbody td {
                    text-align: right;
                    padding: 8px 16px;
                }

            #cart-table i {
                cursor: pointer;
            }

        #cart-form {
            margin-top: 48px;
            margin-bottom: 48px;
        }

            #cart-form .btn {
                margin-left: 16px;
                background-color: #F26B44;
                border: 0;
                color: #fff;
            }

        .no-cart {
            font-size: 20px;
            padding: 30px 30px;
        }
    </style>
</head>
<body>
    <div id="top-header" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div id="basad" class="row tar">
                <div class="=col-md-12">
                    בס"ד
                </div>
            </div>
            <div id="header-content" class="row tar">
                <div id="qshd" class="col-md-4">
                    <div id="header-details" style="margin-top:0;text-align:left;">
                        <div style="margin-bottom:20px;" class="pn">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                        <div>אישי בשבילך - אדם: <span class="pn">054-5688304</span> </div>
                        <div>מהיבואן לצרכן ובסיטונאות</div>
                    </div>
                </div>
                <div class="col-md-4">
                    &nbsp;
                </div>
                <div id="logo" class="col-md-4">&nbsp;</div>
            </div>
        </div>
    </div>

    <h3>הזמנה מספר - @Model.OrderId <span style="float:left;font-weight: bold;font-size: 13px;">תאריך - @Model.OrderDate.ToString("dd/MM/yyyy")</span></h3>

    <table id="cart-table">
        <thead>
            <tr>
                <th class="sku">מק"ט</th>
                <th class="name">שם המוצר</th>
                <th class="props">תכונות</th>
                <th class="qnt">כמות</th>
                <th class="comm">הערה</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr data-id="@item.OrderId">
                    <td class="sku">@item.SKU</td>
                    <td class="name">@item.Name</td>
                    <td class="props">@item.Property</td>
                    <td class="qnt">@item.Quantity</td>
                    <td class="comm">@item.Comment</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 style="margin-top:50px;">שם המזמין: @Model.UserName</h4>
    <h4>הערה כללית: @Model.UserMessage</h4>

</body>
</html>
