@using ShallvaMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "התחברות";
}
<div id="login">
    <div class="row login-title">
        <div class="col-xs-12">
            <h2>@ViewBag.Title</h2>
            <h4>הכנס שם משתמש וסיסמא על מנת להתחבר.</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.LoginName, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-12">
                            @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LoginName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-xs-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input type="submit" value="התחבר" class="btn btn-default btn-orange" />
                        </div>
                    </div>
                }
            </section>
        </div>

