﻿@using Microsoft.AspNet.Identity;
@using ShallvaMVC.Models;
@using ShallvaMVC.Utils;


@{
    Layout = null;
    bool userConnected = Request.IsAuthenticated;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>שלווה @ViewBag.Title</title>
    @*<link rel="stylesheet" href="~/Content/bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/site-mobile.css" />
    @RenderSection("header", required: false)
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header row">
                <div class="col-xs-6">
                    <span class="col-xs-8 catalog-span">קטלוג</span>
                    <button type="button" class="col-xs-4 navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                        <span class="sr-only">ניווט</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="col-xs-6"><h5 class="text-right"><strong><span>בס"ד</span></strong></h5></div>

                @if (Request.IsAuthenticated)
                {
                    <div id="welcome" class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-6">
                                <span><strong><span>ברוך הבא, @ShallvaUser.Current.Name</span></strong></span>
                                <br />
                                <span class="small-text"><a href="javascript:document.getElementById('logoutForm').submit()">התנתק</a></span>
                            </div>
                            <div class="col-xs-6">
                                <div><a href="javascript:void(0)" title="עגלת קניות"><span class="glyphicon glyphicon-shopping-cart"></span><span class="hicrt">עגלת הקניות שלי</span></a></div>
                                <div><a href="javascript:void(0)" title="היסטורית הזמנות"><span class="glyphicon glyphicon-hourglass"></span><span class="hicrt">היסטורית הזמנות</span></a></div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse col-xs-12" id="menu">
                    <ul class="nav navbar-nav text-right">
                        <li>
                            <form class="navbar-form navbar-left" role="search">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                            </span>
                                            <input type="text" class="form-control search-box" placeholder="חיפוש מהיר">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </li>
                        <li role="separator" class="divider"></li>
                        @if (!userConnected)
                        {
                            <li><a href="@Url.Action("Login", "Account")">התחברות</a></li>
                        }
                        <li><a href="@Url.Action("Index", "Home")">דף הבית</a></li>
                        <li><a href="@Url.Action("About", "Home")">אודות</a></li>
                        <li id="products">
                            <a href="#products">מוצרים</a>
                            @Html.Partial("Partials/_CategoriesMenu", DataProvider.GetCategories())
                        </li>
                        <li><a href="@Url.Action("Workshops", "Workshops")">סדנאות</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">צור קשר</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <header class="header-container container text-center">
        <div class="row">
            <div class="col-xs-12">
                <a class="logo" href="/mobile"><img src="~/Content/Mobile/Images/logo.png" alt="Shallva-logo" /></a>
            </div>
        </div>
    </header>
    <div id="mobile-main-content" class="container body-content">
        @if (IsSectionDefined("pageTitle"))
            {
            <div id="page-title">
                @RenderSection("pageTitle", required: false)
            </div>
        }
        @RenderBody()
    </div>
    <footer class="container">
        <div id="footer">
            <a id="to-top" href="#" class="ico glyphicon glyphicon-arrow-up"></a>
            <span>
                כל הזכויות שמורות &copy; @DateTime.Now.Year
                <br />
                <br />
                התמונות להמחשה בלבד ט.ל.ח
            </span>
        </div>
    </footer>

    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @:@Html.AntiForgeryToken()
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Mobile/Shallva-Mobile.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
