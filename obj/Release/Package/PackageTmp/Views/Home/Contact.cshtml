@using ShallvaMVC.Models;

@{
    ViewBag.Title = "צור קשר";
}

@section pageTitle
{
    <h1>צור קשר</h1>
}

@model Contact

@if (ViewData["ContactSent"] != null && (bool)ViewData["ContactSent"])
{
    <div id="tnk-contact">תודה על תגובתך</div>
}
else
{
    <div id="contact">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            <h3>אנא הכנס נתונים לשליחת הודעה אלינו</h3>
            <div class="row">
                <div class="col-md-6 pull-right">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name)
                        @Html.ValidationMessageFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Phone)
                        @Html.ValidationMessageFor(x => x.Phone)
                        @Html.TextBoxFor(x => x.Phone)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Mobile)
                        @Html.ValidationMessageFor(x => x.Mobile)
                        @Html.TextBoxFor(x => x.Mobile)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email)
                        @Html.ValidationMessageFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { type = "email" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.BusinessName)
                        @Html.TextBoxFor(x => x.BusinessName)
                    </div>
                </div>
                <div class="col-md-6 pull-right">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Id)
                        @Html.TextBoxFor(x => x.Id)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.BusinessAddress)
                        @Html.TextBoxFor(x => x.BusinessAddress)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Subject)
                        @Html.ValidationMessageFor(x => x.Subject)
                        @Html.TextBoxFor(x => x.Subject, new { @class = "fw" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Content)
                        @Html.ValidationMessageFor(x => x.Content)
                        @Html.TextAreaFor(x => x.Content, new { rows = 4, @class = "fw" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-default pull-left">שלח</button>
                </div>
            </div>
        }
    </div>
}